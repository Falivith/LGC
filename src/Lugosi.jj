{
  " "
| "\t"
| "\n"
| "\r"
}

TOKEN :
{
  <MAIN: "main">
| <VARDECL: "var">
| <TIPO_INT: "int">
| <TIPO_BOOL: "bool">
| <TIPO_FLOAT: "float">
| <TIPO_VOID: "void">
| <ACHAVES: "{">
| <FCHAVES: "}">
| <APARENT: "(">
| <FPARENT: ")">

| <BOOL_FALSE: "false">
| <BOOL_TRUE: "true">

| <IF: "if">
| <WHILE: "while">
| <DO: "do">
| <RETURN: "return">
| <PRINT: "print">
| <FUNCTION: "function">

| <ASSIGN: ":=">
| <EOL: ";">
| <COMMA: ",">
| <PLUS: "+" >
| <MINUS:  "-" >
| <MULT:  "*" >
| <DIV:  "/" >
| <AND:  "&&" >
| <OR:  "||" >
| <LESSTHAN:  "<" >
| <MORETHAN:  ">" >
| <EQUAL:  "==">
}

TOKEN :
{
   <NUM : (["0"-"9"])(".")*(["0"-"9"])*>
 | <ID: ["a"-"z","A"-"Z"] ( ["a"-"z","A"-"Z","0"-"9","-","_"])*>

}

void Lugosi () :
{Token t;}
{
  Main() (<FUNCTION>)?
  <EOF>
}

void Main () :
{}
{
  <MAIN> <ACHAVES> Vardecl() SeqComandos() <FCHAVES>
}

void Vardecl () :
{Token t;}
{
  <VARDECL> Tipo() t.image <EOL> Vardecl_()
}

void Vardecl_ () :
{Token t;}
{
  (t.image <EOL> Vardecl_())?
}

void Tipo () :
{} 
{
  <TIPO_BOOL> | <TIPO_FLOAT> | <TIPO_INT> | <TIPO_VOID>
}

void SeqComandos () : 
{}
{
  Comando() SeqComandos_()
}

void SeqComandos_() : 
{}
{
  (Comando() SeqComandos_())?
}

void Comando () : //Implementar
{}
{

}

void Exp () : 
{}
{
  (<APARENT> Exp() Op() Exp() <FPARENT>) | Fator()
}

void Fator () :
{Token t; }
{
  t.image | (t.image <APARENT> (ListaExp())? <FPARENT>) |
  <NUM> | <BOOL_TRUE> | <BOOL_FALSE>
}

void Op () :
{}
{
  <PLUS> | <MINUS> | 
  <MULT> | <DIV> | 
  <AND> | <OR> | 
  <LESSTHAN> | <MORETHAN> | <EQUAL> 
}

void ListaExp() :
{}
{
  Exp() | (ListaExp() <COMMA> Exp())
}




